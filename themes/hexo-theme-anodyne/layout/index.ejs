
<%
    var isBlog = page.type === 'blog';
%>


<!-- Banner -->
<%- partial('_partial/banner.ejs', {
    mainText: theme.index_banner_text,
    secondaryText: theme.index_banner_text_secondary,
    faIconCss: theme.index_font_awesome_icon_css
}) %>

<!-- Content -->
<div class="w-100 ph2 ph4-m ph5-l mv5 mv4-l">
    <div class="content">
        <div class="mw8 center">
            <div class="mw8 center">
                <div class="fl w-third">
                    <a href="/archives/"  ><div class="tc f3 near-white bg-dark-pink ba dim pr-pill">Archives</div></a>
                </div>
                <div class="fl w-third">
                    <a href="/tags/"      ><div class="tc f3 near-white bg-dark-pink ba dim pr-pill">Tags</div></a>
                </div>
                <div class="fl w-third">
                    <a href="/categories/"><div class="tc f3 near-white bg-dark-pink ba dim pr-pill">Categories</div></a>
                </div>
            </div>    
            <% page.posts.forEach(function(item, index) { %>
                <%- partial('_partial/article-short', {item: item, index: index}) %>
            <% }); %>
        </div>
    </div>
    <%- partial('_partial/pagination') %>
</div>
